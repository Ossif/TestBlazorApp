@code {
    [Parameter] public string Id { get; set; }
    [Parameter] public string ColumnName { get; set; }

    [Parameter] public bool IsActive { get; set; }
    [Parameter] public EventCallback<string> OnFilterClicked { get; set; }

    private async Task HandleClick()
    {
        await OnFilterClicked.InvokeAsync(ColumnName);
    }
    private string GetElementId() => ColumnName; // Генерация id на основе ColumnName
}
